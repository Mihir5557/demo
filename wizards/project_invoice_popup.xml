<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--wizard "Generate Invoice" form view-->
        <record id="view_invoice_menu_wizard_form" model="ir.ui.view">
            <field name="name">invoice.menu.wizard.form</field>
            <field name="model">invoice.menu.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field invisible="1" name="state"/>
                    <sheet invisible="state != 'draft'">
                        <group string="Invoice Template Information" invisible="state != 'draft'">
                            <field name="invoice_tmpl"/>
                            <div colspan="2" class="text-muted" style="padding-left:35px;">or</div>
                            <field name="tmpl_name"/>
                        </group>
                        <group string="Invoice Information" invisible="state != 'draft'">
                            <field name="company_id" invisible="0"/>
                            <field name="partner_id"
                                   domain="[('customer_rank','&gt;', 0),('type','in',('invoice','contact'))]"
                                   options="{'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                            <field name="account_ids" widget="many2many_tags"
                                   domain="[('partner_id','=?',partner_id),('company_id.id','=',company_id)]"/>
                        </group>
                        <group invisible="state != 'draft'">
                            <group>
                                <label for="date_from" string="Timesheet Period"/>
                                <div>
                                    <field name="date_from" style="width: 46%"/>
                                    to
                                    <field name="date_to" style="width: 46%"/>
                                </div>
                                <field name="date_format" placeholder="dd/mm/yyyy"
                                       help="Ex. format 'dd/mm/yyyy','mm/dd/yyyy' etc."/>
                            </group>
                            <group>
                                <field name="partner_bank_id"
                                       groups="account.group_account_readonly,account.group_account_manager, account.group_account_user,account.group_account_invoice"/>
                                <field name="invoice_line_type"/>
                                <label for="not_approve_ts" string="Consider not approved"/>
                                <br/>
                                <label for="not_approve_ts" string="Timesheet lines"/>
                                <field name="not_approve_ts" nolabel="1"/>
                            </group>
                        </group>
                        <group invisible="state != 'draft'">
                            <group>
                                <field name="discount_type"/>

                            </group>

                            <group>
                                <field name="discount_rate"/>
                            </group>
                        </group>
                    </sheet>


                    <sheet invisible="state != 'invoice'">
                        <h3>Invoice Pricing Details</h3>
                        <field name="invoice_pricing">
                            <list editable="bottom" string="Invoice Pricing">
                                <field name="user_id"/>
<!--                                <field name="product_id" options="{'no_create': True,'no_open':True}" readonly="1"/>-->
                                <field name="emp_total_hr"/>
                                <field name="price"/>
                            </list>
                        </field>
                    </sheet>

                    <sheet invisible="state != 'invoice2'">
                        <h3>Invoice Pricing Details</h3>
                        <field name="invoice_pricing2">
                            <list editable="bottom" string="Invoice Pricing">
<!--                                <field name="product_id" options="{'no_create': True,'no_open':True}" readonly="1"/>-->
                                <field name="emp_total_hr"/>
                                <field name="quantity"/>
                                <field name="price"/>
                            </list>
                        </field>
                    </sheet>

                    <footer>
                        <button string="Back" class="btn-primary" invisible="state == 'draft'"
                                type="object" name="action_previous_state"/>
                        <button name="enter_pricing_timesheet_invoice" type="object" string="Pricing Detail"
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="create_invoices" string="Create Invoice" type="object" class="btn-primary"
                                invisible="state == 'draft'"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--wizard "Generate Invoice" action-->
        <record id="action_timesheet_invoice" model="ir.actions.act_window">
            <field name="name">Generate Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.menu.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_invoice_menu_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_timesheet_invoice"
                  name="Generate Invoice"
                  id="timesheet_invoice_wizard_menu"
                  parent="account.menu_finance_receivables"
                  sequence="5"/>

        <record id="view_invoice_template_data_list" model="ir.ui.view">
            <field name="name">invoice.template.data.list</field>
            <field name="model">invoice.template.data</field>
            <field name="arch" type="xml">
                <list string="Invoice Template Data">
                    <field name="name"/>
                    <field name="account_ids"/>
                    <field name="invoice_line_type"/>
                </list>
            </field>
        </record>

        <record id="view_invoice_template_data_form" model="ir.ui.view">
            <field name="name">invoice.template.data.form</field>
            <field name="model">invoice.template.data</field>
            <field name="arch" type="xml">
                <form string="Invoice Template Data">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="account_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <group>
                                <field name="invoice_line_type"/>
                                <field name="date_format"/>
                                <field name="partner_bank_id"/>
                            </group>
                            <group>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_invoice_pricing_details_form" model="ir.ui.view">
            <field name="name">invoice.pricing.details.form</field>
            <field name="model">invoice.pricing.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="user_id"/>
                        <field name="price"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>