<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="document_tax_totals_org">
            <tr style="border-bottom:2px solid darkgrey">
                <td>Discount</td>
                <td class="text-end">
                    <span t-field="o.amount_discount"/>
                </td>
            </tr>
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">

                <tr class="o_subtotal">
                    <td>
                        <strong t-esc="subtotal['name']"/>
                    </td>

                    <td class="text-end">
                        <span
                                t-att-class="oe_subtotal_footer_separator"
                                t-esc="subtotal['formatted_amount']"
                        />
                    </td>
                </tr>

                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                <t t-call="aspl_invoice.tax_groups_totals_org"/>
            </t>

            <!--Total
            amount with all taxes-->

            <tr class="border-black o_total">
                <td>
                    <strong>Total</strong>
                </td>
                <td class="text-end">
                    <span t-esc="tax_totals['formatted_amount_total']"/>
                </td>
            </tr>
        </template>

        <template id="tax_groups_totals_org">
            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                <tr>
                    <t
                            t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1 or (tax_totals['amount_untaxed'] != amount_by_group['tax_group_base_amount'])">
                        <td>
                            <span t-esc="amount_by_group['tax_group_name']"/>
                            <span class="text-nowrap">on
                                <t
                                        t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                            </span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                  t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                    <t t-else="">
                        <td>
                            <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                  t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                </tr>
            </t>
        </template>


        <template id="report_invoice_document_original">
            <t t-call="web.external_layout">
                <h2 style="text-align: center;color:#13135a;font-family:Poppins;margin-top:-50px">
                    <b>
                        <t t-if="o.reference">TAX</t>
                        <t t-else="">PRO FORMA</t>
                        INVOICE
                    </b>
                </h2>

                <t t-set="o" t-value="o.with_context(lang=lang)"/>

                <br/>
                <table style="width:100%">
                    <tbody style="font-family:calibri;">
                        <tr style="font-size: 16px;">
                            <td style="width:2.5%;padding-bottom: 3px;"></td>
                            <td
                                    style="width:40%; text-align:left;padding-left: 20px;font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 3px;">
                                TO :
                            </td>
                            <td
                                    style="width:28%; text-align:right;font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 3px;">
                                INVOICE# :
                            </td>
                            <td style="width:25%; text-align:right;padding-bottom: 3px;">
                                <!-- <t t-esc="o.name"/> -->
                                <t t-if="o.reference">
                                    <t t-esc="o.reference"/>
                                </t>
                                <t t-else="">
                                    <t t-esc="o.name"/>
                                </t>
                            </td>
                            <td style="width:4.5%;padding-bottom: 3px;"></td>
                        </tr>

                        <tr style="font-size: 16px;">
                            <td style="width:2.5%;padding-bottom: 3px;"></td>
                            <td rowspan="5"
                                style="width:40%; text-align:left;padding-left: 20px;padding-bottom: 3px;">
                                <b>
                                    <t t-esc="o.partner_id.name"/>
                                </b>
                                <br/>
                                <t
                                        t-if="o.partner_id.company_type == 'person'">
                                    <t t-esc="o.partner_id.parent_id.name"/>
                                    <br/>
                                </t>
                                <t
                                        t-esc="o.partner_id.street"/>
                                <t t-esc="o.partner_id.street2"/>
                                ,
                                <t
                                        t-esc="o.partner_id.city"/>,<t
                                    t-esc="o.partner_id.state_id.name"/>,
                                <br/>
                                <t
                                        t-esc="o.partner_id.country_id.name"/>
                                -
                                <t
                                        t-esc="o.partner_id.zip"/>
                            </td>
                            <td
                                    style="width:28%; text-align:right;font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 3px;">
                                INVOICE DATE :
                            </td>
                            <td style="width:25%; text-align:right;padding-bottom: 3px;">

                                <t t-esc="o.invoice_date"/>
                            </td>
                            <td style="width:4.5%;padding-bottom: 3px;"></td>
                        </tr>

                        <tr style="font-size: 16px;">
                            <td style="width:2.5%;padding-bottom: 3px;"></td>

                            <td
                                    style="width:28%; text-align:right;font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 3px;">
                                DUE DATE :
                            </td>
                            <td style="width:25%; text-align:right;">
                                <t t-esc="o.invoice_date_due"/>
                            </td>
                            <td style="width:4.5%;padding-bottom: 3px;"></td>
                        </tr>


                        <tr style="font-size: 16px;">
                            <td style="width:2.5;padding-bottom: 3px;%"></td>

                            <td
                                    style="width:28%; text-align:right;font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 3px;">
                                PLACE OF SUPPLY :
                            </td>
                            <td style="width:25%; text-align:right;padding-bottom: 3px;">
                                <t t-if="o.partner_id.country_id.code == 'IN'">
                                    <t
                                            t-esc="o.partner_id.state_id.name"/>
                                    (<t
                                        t-esc="o.partner_id.state_id.l10n_in_tin"/>)
                                </t>
                                <t t-else="">
                                    <t t-esc="o.partner_id.country_id.name"/>
                                </t>
                            </td>
                            <td style="width:4.5%;padding-bottom: 3px;"></td>
                        </tr>

                    </tbody>
                </table>

                <br/>
                <br/>
                <t t-set="flagCount" t-value="0"/>
                <table style="width:92%;margin-left:4.0%;" class="table table-sm o_main_table"
                       name="invoice_line_table">
                    <thead style="border-top: 2px solid darkgrey;border-bottom: 2px solid darkgrey;">
                        <tr style="font-weight: 800;color: #ff7733;font-family: cambria;">
                            <th name="th_no" style="width:7%;text-align:left;">
                                <span>NO</span>
                            </th>
                            <th name="th_activity" style="width:42%;text-align:left;">
                                <span>ACTIVITY</span>
                            </th>
                            <th name="th_sac_code" style="width:8%;text-align:center;">
                                <span>HSN/SAC CODE</span>
                            </th>
                            <th name="th_billedhours" style="width:15%;text-align:center;">
                                <span>QUANTITY</span>
                            </th>
                            <th name="th_of_devs" style="width:8%;text-align:center;">
                                <span>RATE</span>
                            </th>
                            <th name="th_amount" style="width:12%;text-align:right;">
                                <span>AMOUNT
                                    <t t-if="o.currency_id">(<span
                                            t-field="o.currency_id.name"></span>)
                                    </t>
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody" style="font-family:calibri">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="flagCount" t-value="flagCount + 1"/>
                            <t t-set="current_subtotal"
                               t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal"
                               t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr
                                    t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">

                                <td>
                                    <span t-esc="flagCount"></span>
                                </td>
                                <td name="account_invoice_line_name">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <td style="text-align:center;">
                                    <span t-field="line.product_id.l10n_in_hsn_code"></span>
                                </td>

                                <td style="text-align:center">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td style="text-align:center;">
                                    <span t-field="line.price_unit"></span>
                                </td>
                                <td class="text-right o_price_total">
                                    <span class="text-nowrap"
                                          t-field="line.price_total"/>
                                </td>
                            </tr>


                        </t>
                    </tbody>
                </table>

                <div class="clearfix mb-4" style="margin-top: -17px">
                    <div id="total">
                        <div
                                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto float-end">
                            <table class="table table-sm"
                                   style="page-break-inside: avoid;width:88%;margin-left:4.0%;border-top:2px solid darkgrey;">

                                <!--Tax
                                totals-->
                                <t t-set="tax_totals" t-value="o.tax_totals"/>
                                <t t-call="aspl_invoice.document_tax_totals_org"/>

                                <!--Payments-->
                                <t t-if="print_with_payments">
                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                        <t t-set="payments_vals"
                                           t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr>
                                                <td>
                                                    <i
                                                            class="oe_form_field text-right oe_payment_label">Paid
                                                        on
                                                        <t t-esc="payment_vals['date']"
                                                           t-options='{"widget": "date"}'/>
                                                    </i>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="payment_vals['amount']"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Amount Due</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>

                <br/>
                <br/>


                <t t-set="payment" t-value="o.payment_swift_id"/>

                <table style="width:72%;margin-left:4.0%;font-size: 14px;page-break-inside: avoid;"
                       name="invoice_payment_instructions">
                    <thead>
                        <tr>
                            <th colspan="3"
                                style="font-weight: 800;color: #ff7733;font-family: cambria;padding-bottom: 8px;">
                                <span>PAYMENT INSTRUCTIONS [WIRE INFORMATION]</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody style="font-family:calibri">

                        <t t-if="o.partner_id.country_id == o.company_id.country_id">
                            <tr>
                                <td style="width:30%;padding-bottom: 5px;">
                                </td>
                                <td style="width:35%;padding-bottom: 5px;">
                                    Bank IFSC Code
                                </td>
                                <td class="colon-saperator" style="width:5%;;padding-bottom: 5px;">:</td>
                                <td style="width:40%;;padding-bottom: 5px;">
                                    <t t-esc="o.partner_bank_id.bank_bic"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Field 57
                                </td>
                                <td>
                                    Beneficiary Bank
                                </td>
                                <td class="colon-saperator">:</td>
                                <td>
                                    <t t-foreach="o.partner_bank_id" t-as="bank">
                                        <t t-esc="bank.bank_id.name"/>
                                    </t>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Ultimate beneficiary
                                </td>
                                <td>Account Number
                                    <span style="color:red">*</span>
                                </td>
                                <td>:</td>
                                <td>
                                    <b>
                                        <t t-esc="o.partner_bank_id.acc_number"/>
                                    </b>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Field 59
                                </td>
                                <td>
                                    Account Name
                                </td>
                                <td>:</td>
                                <td>
                                    <b>
                                        <t t-esc="o.partner_bank_id.partner_id.name"/>
                                    </b>
                                </td>
                            </tr>
                        </t>

                        <t t-else="">
                            <tr>
                                <td style="width:30%;padding-bottom: 5px;">
                                    To:
                                </td>
                                <td style="width:35%;padding-bottom: 5px;">
                                    Bank Name
                                </td>
                                <td style="width:5%;;padding-bottom: 5px;">:</td>
                                <td style="width:40%;;padding-bottom: 5px;">
                                    <t t-esc="payment.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Field 56
                                </td>
                                <td>
                                    Swift Code
                                </td>
                                <td>:</td>
                                <td>
                                    <t t-esc="payment.our_correspondence_bank_swift_code"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-bottom: 5px;">
                                    (Intermediary bank)
                                </td>
                                <td>
                                    Bank Clearing Code
                                </td>
                                <td>:</td>
                                <td>
                                    <t t-esc="payment.bank_clearing_code"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-bottom: 5px;">
                                    For credit to:
                                </td>
                                <td>Account Number
                                    <span style="color:red">*</span>
                                </td>
                                <td>:</td>
                                <td>
                                    <t t-esc="payment.our_correspondence_bank_account_no"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                </td>
                                <td>
                                    ABA FED Number
                                </td>
                                <td class="colon-saperator">:</td>
                                <td>
                                    <t t-esc="payment.routing_no"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-bottom: 5px;">
                                </td>
                                <td>
                                    Bank IFSC Code
                                </td>
                                <td class="colon-saperator">:</td>
                                <td>
                                    <t t-esc="o.partner_bank_id.bank_bic"/>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Field 57
                                </td>
                                <td>
                                    Beneficiary Bank
                                </td>
                                <td class="colon-saperator">:</td>
                                <td>
                                    <t t-foreach="o.partner_bank_id" t-as="bank">
                                        <t t-esc="bank.bank_id.name"/>
                                    </t>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Ultimate beneficiary
                                </td>
                                <td>Account Number
                                    <span style="color:red">*</span>
                                </td>
                                <td>:</td>
                                <td>
                                    <b>
                                        <t t-esc="o.partner_bank_id.acc_number"/>
                                    </b>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding-bottom: 5px;">
                                    Field 59
                                </td>
                                <td>
                                    Account Name
                                </td>
                                <td>:</td>
                                <td>
                                    <b>
                                        <t t-esc="o.partner_bank_id.partner_id.name"/>
                                    </b>
                                </td>
                            </tr>
                        </t>

                    </tbody>
                </table>
            </t>
        </template>


        <template id="report_invoice_original">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="aspl_invoice.report_invoice_document_original" t-lang="lang"/>
                </t>
            </t>
        </template>

        <record id="account.account_invoices" model="ir.actions.report">
            <field name="name">Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">aspl_invoice.report_invoice_original</field>
            <field name="report_file">aspl_invoice.report_invoice_original</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_invoice_customized_discount" inherit_id="account.document_tax_totals">
            <xpath expr="//tr[hasclass('o_subtotal')]" position="before">
                <tr>
                    <td>Discount</td>
                    <td class="text-right">
                        <span t-field="o.amount_discount"/>
                    </td>
                </tr>
            </xpath>
        </template>

    </data>
</odoo>
