<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="project_timesheet_invoice_configuration" model="ir.ui.view">
            <field name="name">Project - Timesheet Invoice Configuration</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='analytic']" position="after">
                    <h2>Timesheet Invoice</h2>
                    <div class="row mt16 o_settings_container" name="analytic">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <b>
                                <label for="journal_id" class="col-lg-3 o_light_label"/>
                            </b>
                            <field name="journal_id"
                                   options="{'no_create_edit': True, 'no_open': True,'no_create':True}"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
