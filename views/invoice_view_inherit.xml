<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="invoice_aspire_form_view" model="ir.ui.view">
            <field name="name">Account - Extended Invoice Form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="payment_swift_id"
                           required="move_type in ['out_invoice','out_refund']" invisible="move_type == 'in_invoice'">
                        <form>
                            <sheet>
                                <group name="PAYMENT_INSTRUCTIONS" string="PAYMENT INSTRUCTIONS">
                                    <group>
                                        <field name="name"/>
                                        <field name="our_correspondence_bank_account_no"/>
                                        <field name="routing_no"/>
                                        <field name="our_correspondence_bank_swift_code"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>

                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="before">
                    <field name="amount_discount" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='narration']" position="before">
                    <group>
                        <field name="discount_type" width="50px"/>
                        <field name="discount_rate" class="oe_inline"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_hsn_or_sac_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
